# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600
